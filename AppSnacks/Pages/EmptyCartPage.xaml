<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppSnacks.Pages.EmptyCartPage"
             Title="Empty Cart">
    
    <VerticalStackLayout  VerticalOptions="CenterAndExpand"
        HorizontalOptions="CenterAndExpand"  Padding="20"  Spacing="20">

        <Image Source="emptycart.jpg"   
               HeightRequest="200"  
               WidthRequest="200"
               Aspect="AspectFit" />

        <Label Text="Your cart is empty!"
               FontSize="18"  
               FontAttributes="Bold"
               HorizontalOptions="Center"    
               VerticalOptions="CenterAndExpand"
               TextColor="DarkBlue"    
               Margin="0,20,0,0" />

        <Button Text="Return"   
                    BackgroundColor="DarkBlue"
                    x:Name="BtnReturn"    
                    FontAttributes="Bold"
                    Clicked="BtnReturn_Clicked"
                    HorizontalOptions="Center"   
                    VerticalOptions="CenterAndExpand" />

    </VerticalStackLayout>

</ContentPage>
